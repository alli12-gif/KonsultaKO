@page
@model DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<!-- Title Section -->
<section class="py-5 text-center">
    <div class="container">
        <h2 class="fw-bold mb-3">Barangay Services Scoreboard</h2>
        <p class="lead">
            Track performance and accountability with our public transparency dashboard showing real response times and service ratings.
        </p>
    </div>
</section>

<!-- Scoreboard Section -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <!-- Department Performance -->
            <div class="col-md-6">
                <div class="card p-4 h-100 shadow-sm" style="border-radius: 15px;">
                    <h5 class="mb-4 fw-bold">Department Performance</h5>
                    <ul class="list-unstyled">
                        <li class="mb-3 d-flex align-items-center justify-content-between">
                            <span><span class="me-2" style="color:#F4C542;">●</span> Sanitation</span>
                            <span class="text-warning">★★★★☆</span>
                        </li>
                        <li class="mb-3 d-flex align-items-center justify-content-between">
                            <span><span class="me-2" style="color:#000000;">●</span> Peace and Order</span>
                            <span class="text-warning">★★★☆☆</span>
                        </li>
                        <li class="mb-3 d-flex align-items-center justify-content-between">
                            <span><span class="me-2" style="color:#A3A3A3;">●</span> Infrastructure</span>
                            <span class="text-warning">★★★★★</span>
                        </li>
                        <li class="mb-3 d-flex align-items-center justify-content-between">
                            <span><span class="me-2" style="color:#F28B82;">●</span> Health Service</span>
                            <span class="text-warning">★★★★☆</span>
                        </li>
                        <li class="mb-3 d-flex align-items-center justify-content-between">
                            <span><span class="me-2" style="color:#BDBDBD;">●</span> ETC</span>
                            <span class="text-warning">★★☆☆☆</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Response Time Analytics -->
            <div class="col-md-6">
                <div class="card p-4 h-100 shadow-sm" style="border-radius: 15px;">
                    <h5 class="mb-4 fw-bold">Response Time Analytics</h5>
                    <div class="mb-4">
                        <label class="form-label">Average Response Time</label>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-dark" style="width: 86%;">86%</div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <label class="form-label">Same Day Resolution</label>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-dark" style="width: 77%;">77%</div>
                        </div>
                    </div>
                    <div>
                        <label class="form-label">Resident Satisfaction</label>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar bg-dark" style="width: 95%;">95%</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>