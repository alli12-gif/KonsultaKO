@page
@model HowItWorksModel
@{
    ViewData["Title"] = "How it Works";
}

<!-- Page Header -->
<section class="text-center" style="background-color: #f0f5d9; padding: 100px 20px; min-height: 250px;">
    <div class="container">
        <h2 class="fw-bold">How KonsultaKo Works</h2>
        <p class="lead text-muted">
            Getting your concerns addressed is easier than ever with our streamlined three-step process.
        </p>
    </div>
</section>

<!-- Steps Section -->
<section class="py-5">
    <div class="container">
        <div class="row g-4 text-center">

            <!-- Step 1 -->
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 rounded-4">
                    <div class="card-body p-4">
                        <div class="mb-3 fs-1 text-secondary">
                            <i class="bi bi-file-earmark-text"></i>
                        </div>
                        <h5 class="fw-bold">01 Submit Report</h5>
                        <p class="text-muted small">
                            File your complaint or concern through our online platform. Upload photos as evidence and provide detailed information.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Step 2 -->
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 rounded-4">
                    <div class="card-body p-4">
                        <div class="mb-3 fs-1 text-warning">
                            <i class="bi bi-graph-up"></i>
                        </div>
                        <h5 class="fw-bold">02 Track Progress</h5>
                        <p class="text-muted small">
                            Receive a ticket number and track your report’s status in real-time. Get notifications on every update.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Step 3 -->
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 rounded-4">
                    <div class="card-body p-4">
                        <div class="mb-3 fs-1 text-success">
                            <i class="bi bi-check-circle"></i>
                        </div>
                        <h5 class="fw-bold">03 Get Resolution</h5>
                        <p class="text-muted small">
                            Your concern gets addressed by barangay officials. Rate the service to help improve our community response.
                        </p>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
