@page
@model FeatureModel
@{
    ViewData["Title"] = "Features";
}

<!-- Hero Section -->
<section class="hero-section text-center py-5">
    <div class="container">
        <h2 class="fw-bold mb-3">Everything You Need for Effective Community Management</h2>
        <p class="lead">
            KonsultaKo provides comprehensive tools to streamline communication between residents and barangay officials.
        </p>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5">
    <div class="container">
        <div class="row g-4">
            <!-- Feature Item -->
            <div class="col-md-4">
                <div class="feature-card p-4 text-center">
                    <img src="~/images/complaint.png" alt="Complaint Box" width="50" class="mb-3" />
                    <h5>Complaint & Suggestion Dropbox</h5>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-card p-4 text-center">
                    <img src="~/images/photo.png" alt="Photo Evidence" width="50" class="mb-3" />
                    <h5>Photo Upload Evidence</h5>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-card p-4 text-center">
                    <img src="~/images/tracking.png" alt="Issue Tracking" width="50" class="mb-3" />
                    <h5>Issue Tracking System</h5>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-card p-4 text-center">
                    <img src="~/images/voter.png" alt="Voter Authentication" width="50" class="mb-3" />
                    <h5>Voter Authentication</h5>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-card p-4 text-center">
                    <img src="~/images/multi.png" alt="Multi-Resolution" width="50" class="mb-3" />
                    <h5>Multi-Resolution System</h5>
                </div>
            </div>

            <div class="col-md-4">
                <div class="feature-card p-4 text-center">
                    <img src="~/images/notification.png" alt="Smart Notifications" width="50" class="mb-3" />
                    <h5>Smart Notifications</h5>
                </div>
            </div>
        </div>
    </div>
</section>
